## ------------ COLORS ------------ ##

# Reset #
Color_Off='\033[0m' # Text Reset

# Regular Colors #
Black='\033[0;30m'  Red='\033[0;31m'     Green='\033[0;32m'  Yellow='\033[0;33m'
Blue='\033[0;34m'   Purple='\033[0;35m'  Cyan='\033[0;36m'   White='\033[0;37m'

# Bold #
BBlack='\033[1;30m' BRed='\033[1;31m'    BGreen='\033[1;32m' BYellow='\033[1;33m'
BBlue='\033[1;34m'  BPurple='\033[1;35m' BCyan='\033[1;36m'  BWhite='\033[1;37m'

# Underline #
UBlack='\033[4;30m' URed='\033[4;31m'    UGreen='\033[4;32m' UYellow='\033[4;33m'
UBlue='\033[4;34m'  UPurple='\033[4;35m' UCyan='\033[4;36m'  UWhite='\033[4;37m'

# Background #
On_Black='\033[40m' On_Red='\033[41m'    On_Green='\033[42m' On_Yellow='\033[43m'
On_Blue='\033[44m'  On_Purple='\033[45m' On_Cyan='\033[46m'  On_White='\033[47m'

BOOT_DIR="/boot/grub/themes"
THEME_DIR="/usr/share/grub/themes"
PKG_NAME="exodia-grub-theme"
FILES_NAME="exodia"

post_install() {
	
	echo -e ${Blue}"\n[*] Copying ${BBlue}${PKG_NAME}${Blue} Files into ${BBlue}${BOOT_DIR}" ${Color_Off}
	cp -r ${THEME_DIR}/${FILES_NAME} ${BOOT_DIR}/

	# echo -e ${Blue}"\n[*] Updating ${BBlue}Grub" ${Color_Off}
	# sudo grub-mkconfig -o /boot/grub/grub.cfg

	echo -e ${BGreen}"[*] GRUB Theme installed successfully!\n" ${Color_Off}

}

post_upgrade() {
	
	echo -e ${Blue}"\n[*] Updating ${BBlue}GRUB Theme Files into ${BBlue}${BOOT_DIR}" ${Color_Off}
	cp -r ${THEME_DIR}/${FILES_NAME} ${BOOT_DIR}/
	
	echo -e ${BGreen}"[*] GRUB Theme updated successfully!\n" ${Color_Off}

}
