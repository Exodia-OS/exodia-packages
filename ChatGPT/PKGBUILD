BIN_PKG=chat-gpt
pkgname=ChatGPT-git
_pkgname=ChatGPT
pkgver=r369.6d950c0
pkgrel=1
pkgdesc="ChatGPT Desktop Application (Mac, Windows and Linux)"
arch=('any')
url="https://github.com/lencx/ChatGPT"
license=('Apache-2.0')
depends=(
	'rust'
	'yarn'
	)
makedepends=('git')

source=(
	
	"git+${url}"
	"ChatGPT.desktop"
	"ChatGPT.png"
	
	)

md5sums=(
	
	'SKIP'
	'SKIP'
	'SKIP'
	
	)

pkgver() {

    cd ${_pkgname}
    printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)" 

}

build() {

	cd "${srcdir}/${_pkgname}"
	cd src-tauri
	jq '.tauri.bundle.active = false' tauri.conf.json > output.json
	rm tauri.conf.json
	mv output.json tauri.conf.json
	cd ..
	
	yarn
	yarn build
	
}

package() {
	
	install -m644 -D ${srcdir}/ChatGPT.desktop ${pkgdir}/usr/share/applications/ChatGPT.desktop

	mkdir -p ${pkgdir}/usr/share/pixmaps
	cp ${srcdir}/ChatGPT.png ${pkgdir}/usr/share/pixmaps/
	
	install -Dm0755 -t "${pkgdir}/usr/bin/" "${srcdir}/${_pkgname}/src-tauri/target/release/${BIN_PKG}"
	

}
