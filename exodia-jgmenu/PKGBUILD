pkgname=exodia-jgmenu
pkgver=1.0
pkgrel=1
pkgdesc="jgmenu config for Exodia OS"
url="https://github.com/Exodia-OS/exodia-packages"
arch=('any')
license=('GPL3')
makedepends=()
conflicts=()
provides=("${pkgname}")
options=(!strip !emptydirs)

prepare() {

	cp -af ../jgmenu/. ${srcdir}

}

package() {

	CONFIG_DIR=${pkgdir}/etc/skel/.config/jgmenu
	mkdir -p $CONFIG_DIR

	cp -r ${srcdir}/* $CONFIG_DIR

}


