pkgname=exodia-grub-menus
pkgver=1.0
pkgrel=1
pkgdesc="GRUB menus For Exodia OS"
arch=('any')
url="https://github.com/Exodia-OS/exodia-packages"
license=('GPL3')
depends=('grub')
install="${pkgname}.install"

source=(

	'40_custom'
	'grub'
)

sha512sums=(

	'47571e03cbcb6eb6d0477643afbdcaed1698e7aee43b4ea8dff78619afe6c0cab4209932dd651eecd6ec160a419a29630f73e4f0b7aec4ae45f8e96c8827f6b5'
	'f76ac87bf8f5e55291d8097bf5075b2e3e74034bd76b1c9ca8b0b347776fa53e3d3d799d936f2eb1fcd4ccf3601ae49f9aa7f39d96daa64f1eea68dba63611be'
)


package() {

	grub_dir=${pkgdir}/etc/grub.d
	default_dir=${pkgdir}/etc/default

	mkdir -p $grub_dir $default_dir

	cp 40_custom "$grub_dir"/
	cp grub "$default_dir"/
	
	
}