pkgname=exodia-install-scripts
pkgver=1.0
pkgrel=1
pkgdesc='Exodia OS Install Scripts'
url="https://github.com/Exodia-OS/exodia-packages"
arch=('any')
license=('GPL3')

source=(

	'chrooted_post_install.sh'
	'post_install.sh'

)

sha512sums=(

	'05b2272b27d16ccbd74f0bef598dec4b344aa3de1cecd7642cd3fc9082ff4c51c3c3725913f234c7eb8fdccecbb0addca4e4e2d0c195d21d1122a17de8697fa1'
	'b1feefc92db389cde5ff24183198d0ea88908e31b4d9b6041dd5be275ad1aa00af18f58a0ad938dadb5552e4624cad42f3cc5f475c382b27651e3699c2d5183b'
)

package() {

	local bin=${pkgdir}/usr/bin
	
	install -Dm755 chrooted_post_install.sh 	${bin}/chrooted_post_install.sh
	install -Dm755 post_install.sh 				${bin}/post_install.sh

}
